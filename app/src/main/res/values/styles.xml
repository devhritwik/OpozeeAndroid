<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_bg_selector</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>
    <style name="myTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">?android:actionBarSize</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">3dp</item>
        <item name="tabPaddingEnd">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="tabBackground">@drawable/tab_bg_selector</item>
        <item name="tabSelectedTextColor">@color/white_color</item>
        <item name="tabTextAppearance">@style/myTabTextStyle</item>
    </style>

    <style name="myTabTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Animation for dialog box -->


    <style name="SortDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
