<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
        android:background="@drawable/top_bar_img"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/iv_back"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:padding="@dimen/_15sdp"
                android:src="@mipmap/back_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_title"
                android:textColor="@color/white_color"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/renner"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/iv_share"
                android:layout_toRightOf="@+id/iv_back"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="Tagged Users"
                />

            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:id="@+id/iv_share"
                android:visibility="invisible"
                android:padding="@dimen/_13sdp"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_share"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/iv_favourite"/>






        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_layout"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_below="@id/toolbar"
        android:background="@color/transparent"></LinearLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



