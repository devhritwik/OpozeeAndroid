<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="@color/color_primary"
        android:gravity="center"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_15sdp"
                android:src="@mipmap/back_icon"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_share"
                android:layout_toRightOf="@+id/iv_back"
                android:gravity="center"
                android:singleLine="true"
                android:text="Question"
                android:textAllCaps="false"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_favourite"
                android:padding="@dimen/_10sdp"
                android:src="@mipmap/iv_share"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_favourite"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_10sdp"
                android:src="@mipmap/fav_white"
                android:visibility="visible" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_below="@+id/toolbar"
    android:layout_above="@+id/send_message_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/iv_user"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_4sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:gravity="left|center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="user1233"
                                android:layout_weight="0.4"
                                android:fontFamily="@font/opensans_bold"
                                android:textColor="@color/black_color"
                                android:id="@+id/tv_name"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_15sdp"
                                android:singleLine="true"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Now"
                                android:textColor="@color/black_color"
                                android:id="@+id/tv_time"
                                android:layout_weight="0.6"
                                android:textStyle="italic"
                                android:textSize="@dimen/_15sdp"
                                android:singleLine="true"
                                android:paddingRight="@dimen/_4sdp"
                                android:fontFamily="@font/opensans_italic"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:gravity="center_vertical|right"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="#@user1233"
                            android:fontFamily="@font/opensans_regular"
                            android:layout_weight="0.4"
                            android:textColor="@color/grey"
                            android:id="@+id/tv_user_name"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_15sdp"
                            android:singleLine="true"
                            />

                    </LinearLayout>


                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.2"
                android:layout_marginLeft="@dimen/_2sdp"
                >



            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black_color"
                android:text="Is climate change a real threat over next 100 years?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:weightSum="1"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Analysis"
                    android:fontFamily="@font/opensans_italic"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginLeft="3dp"
                    />
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_weight="0.4"
                        android:layout_gravity="center"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_line"
                        android:thumb="@null"
                        />

                </LinearLayout>
            </LinearLayout>

            </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Previous Opinions"
                android:textAllCaps="true"
                android:drawablePadding="@dimen/_10sdp"
                android:padding =  "@dimen/_10sdp"
                android:drawableLeft="@drawable/comment_drawable"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="3dp"
                />


        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        android:layout_above="@id/send_message_layout"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>
</ScrollView>
    <RelativeLayout
        android:id="@+id/send_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_grey"
        android:focusableInTouchMode="true"
        android:padding="3dp">


        <EditText
            android:id="@+id/edit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_send"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg"
            android:focusableInTouchMode="true"
            android:hint="Your Opinion"
            android:padding="8dp"
            android:textColorHint="@color/grey"
            android:maxLines="6"
            android:gravity="left|top"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>



        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@mipmap/send"
            android:tint="@color/color_primary"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:id="@+id/iv_send"

            android:layout_height="@dimen/_45sdp"/>


    </RelativeLayout>

    <!--<android.support.design.widget.FloatingActionButton-->
